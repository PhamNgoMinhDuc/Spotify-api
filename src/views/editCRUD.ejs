<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit song's information</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" />

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row mt-2">
            <button type="submit" class="btn btn-primary"><a class="text-white text-decoration-none" href="/">Back</a></button>
        </div>
        <div class="row mt-1">
            <form action="/put-curd" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3">Edit Song</div>
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">Name song</label>
                        <input type="text" class="form-control" name="name" value="<%= song.name%>" placeholder="name" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Author</label>
                        <input type="text" class="form-control" name="author" value="<%= song.author%>" placeholder="author" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputEmail4">img song</label>
                        <input type="text" class="form-control" name="imgSong" value="<%= song.img_song%>" placeholder="imgSong" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">img author</label>
                        <input type="text" class="form-control" name="imgAuthor" value="<%= song.img_author%>" placeholder="imgAuthor" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAddress">url</label>
                    <input type="text" class="form-control" name="url" value="<%= song.url%>" placeholder="url" />
                </div>
                <input type="text" name="id" value="<%= song.id%>" hidden />
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</body>

</html>