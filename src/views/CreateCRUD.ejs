<body>
    <div class="container">
        <div class="row mt-2">
            <button type="submit" class="btn btn-primary"><a class="text-white text-decoration-none" href="/">Back</a></button>
        </div>

        <div class="row mt-3">
            <form action="/post-crud" method="POST">
                <div class="form-row">
                    <div class="col-12 mb-3">Add new song</div>
                    <div class="form-group col-md-6">
                        <label for="">Name Song</label>
                        <input type="text" class="form-control" name="name" placeholder="name" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4">Author</label>
                        <input type="text" class="form-control" name="author" placeholder="author" />
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="">Img Song</label>
                        <input type="text" class="form-control" name="imgSong" placeholder="imgSong" />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Img Author</label>
                        <input type="text" class="form-control" name="imgAuthor" placeholder="imgAuthor" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="">url</label>
                    <input type="text" class="form-control" name="url" placeholder="url" />
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>
